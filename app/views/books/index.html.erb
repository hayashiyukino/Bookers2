<!-- ユーザーの詳細 -->
<%= render 'users/UserInfo', user: @user%>

<!--Book一覧-->
<!--<p id = "notice">%= flash[:notice] %></p>-->
<h2>Books</h2>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
          <!--投稿したユーザー詳細画面へのリンクをつける-->
          <%= link_to users_path(@user.id) do %>
          <%= image_tag book.user.get_profile_image(100,100) %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(book.id) do %>
          <%= book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

