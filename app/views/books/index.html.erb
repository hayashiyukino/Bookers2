<main>
  <p id = "notice"><%= flash[:notice] %></p>
  <div class = "container px-5 px-sm-0">
    <div id = "error_explanation">  
      <% if @book.errors.any? %>
        <h3><%= @book.errors.count %>errors prohibited this user from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>   
    <div class = "row">
      <div class = "col-md-3">
        <!-- ユーザーの詳細  book投稿フォーム-->
        <%= render '/users/UserInfo', user: @user, book: @book %>
      </div>
      <div class = "col-md-8 offset-md-1">
        <!--book一覧 -->
        <h2>Books</h2>
          <table class = "table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
              <tr>
                <td>
                  <!--投稿したユーザー詳細画面へのリンクをつける-->
                  　<!--リンク先-->
                  <%= link_to user_path(book.user.id) do %>
                  　<!--ユーザーの画像-->
                  <%= image_tag book.user.get_profile_image(100,100) %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                  <% end %>
                </td>
                <td><%= book.body %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</main>
