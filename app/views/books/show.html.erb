<main>
  <p id = "notice"><%= flash[:notice] %></p>
  <div class = "container px-5 px-sm-0">
    <div class = "row">
      <div class = "col-md-3">
        <!-- ユーザーの詳細  book投稿フォーム-->
        <%= render '/users/UserInfo', user: @user, book: @book %>
      </div>
      <div class = "col-md-8 offset-md-1">
        <!--本の詳細-->
        <h2>Book detail</h2>
          <table class = "table">
           <tbody>
             <tr>
               <td>
                 <%= link_to user_path(@books.user.id) do %> 
                  <%= image_tag @books.user.get_profile_image(100,100) %>
                  <br> <%= @books.user.name %>
                 <% end %>
               </td>
               <td>
                 <%= link_to @books.title, book_path(@books.id) %>
               </td>  
               <td>
                 <%= @books.body %></p>
               </td>
               <td>
                <% if @books.user == current_user %>
                 <%= link_to "Edit",  edit_book_path(@books)%>
                <% end %>
               </td>
               <td>
                <% if @books.user == current_user %>
                 <%= link_to "Destroy", book_path(@books), method: :delete, "data-confirm" => "本当に消しますか？" %>
                <% end %>
               </td>
           </tbody>
          </table>
      </div>
    </div>
  </div>
</main>